{
    "$schema": "https://json.schemastore.org/template",
    "classifications": [ "CG4", "Web API", "Consumer App" ],
    "author": "CG4",
    "name": "CG4 Web API",
    "identity": "CG4.WebAPI",
    "groupIdentity": "CG4.WebApi",
    "shortName": "cg4api",
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "sourceName": "ProjectName",
    "preferNameDirectory": false,
    "symbols": {
        "correctName": {
            "type": "derived",
            "valueSource": "name",
            "valueTransform": "IncorrectName",
            "replaces": "ProjectName",
            "fileRename": "ProjectName"
        },
        "databaseName": {
            "type": "parameter",
            "datatype": "string",
            "replaces": "project_name",
            "defaultValue": "project_name",
            "description": "The name of the Database, that will replace the default DB name in the connectionStrings.json."
        }
    },
    "forms": {
        "IncorrectName": {
            "identifier": "replace",
            "pattern": "[\\W]",
            "replacement": ""
        }
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "exclude": [
                "**/.gitattributes",
                "**/.gitignore",
                "**/.vs/**",
                "**/.git/**",
                "**/.idea/**",
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                "**/.template.config/**"
            ]
        }
    ]
}